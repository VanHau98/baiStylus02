	.son
		height auto
		// background #4286f4
		.son1
			height 100%
			margin-top 10px
			.carousel-indicators
				li
					width 10px
					height 10px
			.carousel-item
				img
					width 100%
					height 600px		  
		.text
			height 50px
			width 100%
			border 1px solid white
			margin 0 auto
			p
				font-size 25px
		.button .btn btn-default
			background white
			color black
		.carousel-caption
			position absolute
			top 20%
			left -30%
				
	.sonn
		width 90%
		float left
		margin-left: 5%
		.sonnbox
			width 90%
			height auto
			background red
			margin-left: 5%
			.sonnboxnho
				float left
				width 33%
				height 400px
				background pink
				overflow hidden
				.sonnke
					float left
					width 100%
					height 400px
					background white
					&:hover 
						background gray
						color white
				h3.sonnhb
					text-align center
					font-size 34px
					font-weight normal
					margin 30% 0% 0% 1% 
				hr
					height 2px
					width 20%
					background gray
					text-align center
					&:hover
						background white
						height 4px
				h3.sonnft
					text-align center
					font-size 20px
					font-weight normal	
					&:hover 
						color black
			button.btn-primary
					margin 4% 0% 0% 35%
					background white
					color black
					border 1px solid gray
					&:hover
						background black
						color white	
						border 1px solid white
			img
					transition 1s
					width 100%
					height 100%
					&:hover
						transform scale(1.5)
						
	
